{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-constant-condition": "off"
  }
}
